@model GProject.WebApplication.Models.DeliveryAddressAndShippingFee.DeliveryAddressDto

@{
    ViewBag.Title = "ĐỊA CHỈ ĐẶT HÀNG";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <form id="formdata" enctype="multipart/form-data">
        <input id="txtId" value="0" style="width:0px;height:0px;visibility: hidden;" hidden="hidden" />
        <div class="container-xl px-4 mt-4">
            <hr class="mt-0 mb-4">
            <div class="row">
                <div class="card mb-4">
                    <div class="card-header">Địa chỉ đặt hàng</div>
                    <div class="card-body">
                        <div class="row gx-3 mb-3">
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputFirstName">Họ và tên</label>
                                <input class="form-control" type="text" id="ShippingFullName" name="ShippingFullName" value="" placeholder="">
                            </div>
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputLastName">Số điện thoại</label>
                                <input type="text" id="ShippingPhone" name="ShippingPhone" value="" placeholder="+84" class="form-control">
                            </div>
                        </div>
                        <div class="row gx-3 mb-3">
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputFirstName">Tỉnh/Thành Phố</label>
                                <select id="selectProvince" class="form-select">
                                    <option></option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputLastName">Quận/Huyện</label>
                                <select id="selectDistrict" class="form-select">
                                </select>
                            </div>
                        </div>
                        <div class="row gx-3 mb-3">
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputOrgName">Phường/Xã</label>
                                <select id="selectWards" class="form-select">
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputLocation">Địa chỉ chi tiết</label>
                                <input type="text" id="ShippingAddress" name="ShippingAddress" value="" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xl-8" style="margin-left:16px;margin-bottom:10px">
                            <button class="btn btn-primary" onclick="SaveDeliveryAddress()">Lưu thay đổi</button>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <table id="table_data" class="table">
                        <thead>
                            <tr>
                                <th class="col-sm-9">Thông tin địa chỉ</th>
                                <th class="col-sm-3"></th>
                            </tr>
                        </thead>
                        <tbody class="tbody" id="tbody">
                            @*@foreach (var item in Model.DeliveryAddressesList)
                            {
                            <tr>
                            <td>
                            @item.Name | @item.PhoneNumber, @item.Address, @item.WardName, @item.DistrictName, @item.ProvinceName
                            </td>
                            <td>
                            <a class="btn btn-warning" > <i class="fa-solid fa-pen-to-square"></i></a> |
                            <a class="btn btn-danger " ><i class="fa-regular fa-trash-can"></i></a>
                            </td>
                            </tr>
                            }*@
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </form>
</div>
<script>
    $(document).ready(function () {
        LoadProvince();
        LoadDataTable();
        LoadDistrict();
        LoadWard();
    })
</script>
